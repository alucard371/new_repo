{% import _self as formMacros %}
{% extends 'base.html.twig' %}


{% macro billetRow(billet) %}
    <div class="row">
        <div class="col-xs-offset-1 col-xs-10 col-lg-5">
            <div class="form-group">
                {{ form_label(billet.nom) }}
                {{ form_errors(billet) }}
                {{ form_widget(billet.nom, {'attr': {'class':'form-control'}}) }}
            </div>
        </div>
        <div class="col-xs-offset-1 col-xs-10 col-lg-5">
            <div class="form-group">
                {{ form_label(billet.prenom) }}
                {{ form_errors(billet) }}
                {{ form_widget(billet.prenom, {'attr': {'class':'form-control'}}) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-offset-1 col-xs-10 col-lg-5">
            <div class="form-group">
                {{ form_label(billet.birthdate) }}
                {{ form_errors(billet) }}
                {{ form_widget(billet.birthdate, {'attr': {'class':'form-control'}}) }}
            </div>
        </div>
        <div class="col-xs-offset-1 col-xs-10 col-lg-5">
            <div class="form-group">
                {{ form_label(billet.dateDeVenue) }}
                {{ form_errors(billet) }}
                {{ form_widget(billet.dateDeVenue, {'attr': {'class':'form-control'}}) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-offset-1 col-xs-10 col-lg-5">
            <div class="form-group">
                {{ form_label(billet.demiJournee) }}
                {{ form_errors(billet) }}
                {{ form_widget(billet.demiJournee, {'attr': {'class':'form-control'}}) }}
            </div>
        </div>
        <div class="col-xs-offset-1 col-xs-10 col-lg-5">
            <div class="form-group">
                {{ form_label(billet.tarifReduit) }}
                {{ form_errors(billet) }}
                {{ form_widget(billet.tarifReduit, {'attr': {'class':'form-control'}}) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-offset-1 col-xs-10 col-lg-8">
            <div class="form-group">
                {{ form_label(billet.pays) }}
                {{ form_errors(billet) }}
                {{ form_widget(billet.pays, {'attr': {'class':'form-control'}}) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-offset-1 col-xs-10 col-lg-8">
            <div class="form-group">

            </div>
        </div>
    </div>
{% endmacro %}

{% block content %}

    {% for clear in app.session.flashbag.get('clear') %}
        <div class="alert alert-info alert-dismissible" role="alert">
            <button class="close" data-dismiss="alert" aria-label="close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h3>{{ clear }}</h3>
        </div>
    {% endfor %}

    {{ form_start(form) }}
<div class="container">
    <div class="row">
        <div class="col-xs-offset-1 col-xs-10 col-md-offset-2 col-md-8 col-lg-offset-2 col-lg-8 col-sm-offset-2 col-sm-8">
            <div class="form-group">
                {{ form_label(form.email) }}
                {{ form_errors(form.email) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
    {{ form_row(form.email) }}
        </div>
    </div>


    <h3 class="text-center">Billets</h3>

        <ul class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-xs-10 col-xs-offset-1 text-center billets" data-prototype="{{ formMacros.billetRow(form.billets.vars.prototype)|e('html_attr') }}">
    {% for billet in form.billets %}
        {{ formMacros.billetRow(billet) }}
    {% endfor %}
        </ul>
        <ul class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-xs-10 col-xs-offset-1">

        </ul>
</div>
    <div class="row">
        <div class="col-xs-offset-1 col-xs-10 col-md-offset-2 col-md-8 col-lg-offset-2 col-lg-8 col-sm-offset-2 col-sm-8">
            <div class="form-group text-center">
                <button type="submit" class="align-center btn btn-default">valider</button>
            </div>
        </div>
    </div>

    {{ form_end(form) }}

{% endblock %}

{% block javascripts %}
   {{ parent() }}
    <script src="{{ asset('js/addTicketLink.js') }}"></script>
{% endblock %}