{% import _self as formMacros %}
{% extends 'base.html.twig' %}


{% macro billetRow(billet) %}

        <div class="row">
            <div class="col-xs-12 col-md-6 col-lg-6 col-sm-6">
                <div class="form-group">
                    {{ form_label(billet.nom) }}
                    {{ form_errors(billet) }}
                    {{ form_widget(billet.nom, {'attr': {'class':'form-control'}}) }}
                </div>
            </div>
            <div class="col-xs-12 col-md-6 col-lg-6 col-sm-6">
                <div class="form-group">
                    {{ form_label(billet.prenom) }}
                    {{ form_errors(billet) }}
                    {{ form_widget(billet.prenom, {'attr': {'class':'form-control'}}) }}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-md-6 col-lg-6 col-sm-6">
                <div class="form-group">
                    {{ form_label(billet.birthdate) }}
                    {{ form_errors(billet) }}
                    {{ form_widget(billet.birthdate, {'attr': {'class':'form-control'}}) }}
                </div>
            </div>
            <div class="col-xs-12 col-md-4 col-lg-6 col-sm-6">
                <div class="form-group">
                    {{ form_label(billet.pays) }}
                    {{ form_errors(billet) }}
                    {{ form_widget(billet.pays, {'attr': {'class':'form-control'}}) }}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6 col-sm-3 col-lg-3">
                <div class="form-group">
                    {{ form_label(billet.tarifReduit) }}
                    {{ form_errors(billet) }}
                    {{ form_widget(billet.tarifReduit, {'attr': {'class':'form-control'}}) }}
                </div>
            </div>
        </div>
{% endmacro %}

{% block content %}

    {% for clear in app.session.flashbag.get('clear') %}
        <div class="alert alert-info alert-dismissible" role="alert">
            <button class="close" data-dismiss="alert" aria-label="close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h3>{{ clear }}</h3>
        </div>
    {% endfor %}

    {{ form_start(form) }}
<div class="container">

    <div class="row">
        <div class="text-center col-xs-12 col-md-3 col-lg-3 col-sm-6">
            <div class="form-group">
                {{ form_label(form.email) }}
                {{ form_errors(form.email) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="text-center col-xs-12 col-md-3 col-lg-3 col-sm-6">
            <div class="form-group">
                {{ form_label(form.dateDeVenue) }}
                {{ form_errors(form.dateDeVenue) }}
                {{ form_widget(form.dateDeVenue, {'attr': {'class':'form-control'}}) }}
            </div>
        </div>
        <div class="text-center col-xs-6 col-sm-3 col-md-3 col-lg-3">
            <div class="form-group">
                {{ form_label(form.demiJournee) }}
                {{ form_errors(form.demiJournee) }}
                {{ form_widget(form.demiJournee, {'attr': {'class':'form-control'}}) }}
            </div>
        </div>
        <div class="col-lg-3  col-md-3 col-sm-4 col-xs-12">
            <div class="transparent panel panel-default text-center">
                <div class="panel-heading">Récupérez votre commande</div>
                <div class="panel-body transparent">
                    <div class="row">
                        <div class="text-center col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-10">
                            {{ form_start(order, {'attr': {'class': 'col-xs-10'}}) }}
                            <div class="form-group">
                                {{ form_label(order.email) }}
                                {{ form_errors(order.email) }}
                                {{ form_widget(order.email, {'attr': {'class': ' form-control'}}) }}
                            </div>
                        </div>
                    </div>
                </div>
                {% include('panel/panel.html.twig') %}
                {{ form_end(order) }}
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-8  col-md-8 col-sm-8 col-xs-12">
            <ul class="text-center billets" data-prototype="{{ formMacros.billetRow(form.billets.vars.prototype)|e('html_attr') }}">
        {% for billet in form.billets %}
            {{ formMacros.billetRow(billet) }}
        {% endfor %}
            </ul>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-offset-1 col-xs-10 col-md-offset-2 col-md-8 col-lg-offset-2 col-lg-8 col-sm-offset-2 col-sm-8">
        <div class="form-group text-center">
            <button type="submit" class="align-center btn btn-default">valider</button>
        </div>
    </div>
</div>
{{ form_end(form) }}

{% endblock %}

{% block javascripts %}
   {{ parent() }}
    <script src="{{ asset('js/addTicketLink.js') }}"></script>
{% endblock %}